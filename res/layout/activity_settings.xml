<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:paddingRight="5dp"
    android:paddingLeft="5dp"
        android:background="#666666"
    tools:context=".SettingsActivity" >

<RelativeLayout
    android:id="@+id/Layout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@drawable/bg"
    android:clickable="true" >

        <TextView
        android:id="@+id/rq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="4dp"
        android:text="Recording Quality"
        android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_below="@+id/rq"
            android:layout_marginBottom="12dp"
            android:text="Very Good, 44100" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:text="Hz" />
<View
              android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView3"
                android:background="#ffffff" />
    
</RelativeLayout>


<RelativeLayout
    android:background="@drawable/bg"
    android:clickable="true"
    android:id="@+id/Layout2"
    android:layout_below="@+id/Layout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
 >

        <TextView
        android:id="@+id/rd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Recording Duration"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="12dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
        <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="12dp"
        android:layout_below="@+id/textViewu"
        android:background="#ffffff"/>

        <TextView
            android:id="@+id/textViewu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@+id/rd"
            android:layout_marginLeft="4dp"
            android:text="60" 
            android:layout_marginBottom="12dp"/>
        <TextView
            android:id="@+id/textView1x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_alignBaseline="@+id/textViewu"
            android:layout_alignBottom="@+id/textViewu"
            android:layout_toRightOf="@+id/textViewu"
            android:text="seconds" />

        

</RelativeLayout>

</RelativeLayout>
